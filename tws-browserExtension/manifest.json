{
  "manifest_version": 3,
  "name": "TWS",
  "version": "1.0.0",
  "description": "TWS浏览器插件 - 实时币价、倒计时、社区导航和电商价格锚定功能",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.pchome.com.tw/*",
    "https://*.momoshop.com.tw/*", 
    "https://*.shopee.tw/*",
    "https://api.coingecko.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TWS 助手",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.pchome.com.tw/*",
        "https://*.momoshop.com.tw/*",
        "https://*.shopee.tw/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}